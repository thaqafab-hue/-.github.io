<body>

  <h1>🎓 بوابة إرسال التعليمية</h1>
  <div class="student-info">
    <h3>اسم الطالب: <span id="studentName">---</span></h3>
    <h4>الصف: <span id="studentClass">---</span></h4>
  </div>

  <table>
    <thead>
      <tr>
        <th>المادة</th>
        <th>امتحان يومي (1)</th>
        <th>نصف الفصل</th>
        <th>امتحان يومي (2)</th>
        <th>نهاية الفصل</th>
        <th>تقويم نوعي</th>
        <th>المجموع</th>
      </tr>
    </thead>
    <tbody id="marksTable">
      <!-- يتم تعبئة البيانات هنا -->
    </tbody>
  </table>

  <button class="logout" onclick="logout()">تسجيل الخروج</button>

  <script>
    // بيانات تجريبية فقط
    const studentData = {
      name: "محمد أحمد",
      class: "الصف التاسع",
      marks: [
        { subject: "الرياضيات", d1: 8, mid: 15, d2: 9, final: 35, eval: 18 },
        { subject: "اللغة العربية", d1: 9, mid: 16, d2: 10, final: 37, eval: 19 },
        { subject: "اللغة الإنجليزية", d1: 7, mid: 14, d2: 9, final: 33, eval: 18 },
        { subject: "علوم", d1: 9, mid: 18, d2: 10, final: 39, eval: 20 }
      ]
    };

    // عرض بيانات الطالب
    document.getElementById("studentName").textContent = studentData.name;
    document.getElementById("studentClass").textContent = studentData.class;

    const tableBody = document.getElementById("marksTable");

    studentData.marks.forEach(m => {
      const total = m.d1 + m.mid + m.d2 + m.final + m.eval;
      const row = `
        <tr>
          <td>${m.subject}</td>
          <td>${m.d1}</td>
          <td>${m.mid}</td>
          <td>${m.d2}</td>
          <td>${m.final}</td>
          <td>${m.eval}</td>
          <td><strong>${total}</strong></td>
        </tr>
      `;
      tableBody.innerHTML += row;
    });

    function logout() {
      alert("تم تسجيل الخروج بنجاح.");
      window.location.href = "index.html";
    }
  </script>

</body>
