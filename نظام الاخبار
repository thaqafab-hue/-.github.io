<body>

  <h1>📰 نظام الأخبار - بوابة إرسال التعليمية</h1>

  <div class="post-box">
    <h2>إنشاء منشور جديد</h2>
    <input type="text" id="teacherName" placeholder="اسم المعلم">
    <select id="targetClass">
      <option value="">اختر الصف المستهدف</option>
      <option>الصف السادس</option>
      <option>الصف السابع</option>
      <option>الصف الثامن</option>
      <option>الصف التاسع</option>
      <option>الصف العاشر</option>
    </select>
    <textarea id="postContent" placeholder="اكتب الخبر أو الإعلان هنا..."></textarea>
    <button onclick="addPost()">نشر المنشور</button>
  </div>

  <div class="news-list" id="newsList">
    <h2>📢 المنشورات</h2>
  </div>

  <button class="back" onclick="history.back()">رجوع</button>

  <script>
    const newsList = document.getElementById("newsList");
    const posts = [];

    function addPost() {
      const teacher = document.getElementById("teacherName").value.trim();
      const targetClass = document.getElementById("targetClass").value;
      const content = document.getElementById("postContent").value.trim();

      if (!teacher || !targetClass || !content) {
        alert("⚠️ الرجاء ملء جميع الحقول قبل النشر.");
        return;
      }

      const newPost = {
        teacher,
        targetClass,
        content,
        date: new Date().toLocaleString()
      };

      posts.unshift(newPost);
      renderPosts();
      document.getElementById("postContent").value = "";
      alert("✅ تم نشر المنشور بنجاح!");
    }

    function renderPosts() {
      newsList.innerHTML = "<h2>📢 المنشورات</h2>";
      posts.forEach(post => {
        const div = document.createElement("div");
        div.className = "news-item";
        div.innerHTML = `
          <h3>${post.teacher} - ${post.targetClass}</h3>
          <p>${post.content}</p>
          <small>📅 ${post.date}</small>
        `;
        newsList.appendChild(div);
      });
    }
  </script>

</body>
